= form_for @lecture do |f|
  - if @lecture.errors.any?
    #error_explanation
      %h2= "#{pluralize(@lecture.errors.count, "error")} prohibited this lecture from being saved:"
      %ul
        - @lecture.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :weekly_hours
    = f.text_field :weekly_hours
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
